[
  {
    "label": "qm::cargo_test",
    "command": "cargo",
    "args": ["test", "--features=ordered-hash"]
  },
  {
    "label": "qm::cargo_nextest_run",
    "command": "cargo",
    "args": ["nextest", "run", "--features=ordered-hash"]
  },
  {
    "label": "qm::cargo_llvm_cov",
    "command": "cargo",
    "args": ["llvm-cov", "nextest", "--features=ordered-hash", "--open"]
  },
  {
    "label": "qm::cargo_miri_test",
    "command": "cargo",
    "args": ["+nightly", "miri", "test", "--features=ordered-hash"],
    "env": {
      "MIRIFLAGS": "-Zmiri-backtrace=full -Zmiri-disable-isolation"
    }
  }
]
